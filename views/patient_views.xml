<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital1.patient.form</field>
        <field name="model">hospital1.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="%(hospital1.action_report_patient_card)d"
                            string="Print Patient Card"
                            type="action"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="date_of_birth"/>
                        <field name="doctor_id"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital1.patient.tree</field>
        <field name="model">hospital1.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="ref"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="doctor_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital1.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="hospital_patient_menu"
              name="Patients"
              parent="menu_hospital1_root"
              action="action_hospital_patient"
              sequence="20"/>
</odoo>
