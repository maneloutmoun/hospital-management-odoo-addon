<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- id du rapport  -->
    <record id="action_report_patient_card" model="ir.actions.report">
       <!-- nom affiche dans odoo -->
        <field name="name">Patient Card</field>
       <!-- modele concerne-->
        <field name="model">hospital1.patient</field>
       <!-- Format du rapport : ici un PDF généré avec QWeb-->
        <field name="report_type">qweb-pdf</field>
       <!-- nom du fichier utilise pour le rapport -->
        <field name="report_name">hospital1.report_patient_card</field>
        <!-- chemin vers le ficihier utilise pour la rapport-->
        <field name="report_file">hospital1.report_patient_card</field>
        <!-- Lien entre le modèle et le rapport -->
        <field name="binding_model_id" ref="hospital1.model_hospital1_patient"/>
        <!-- type de liaison -->
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_invoice" model="ir.actions.report">
    <field name="name">Invoice</field>
    <field name="model">hospital1.invoice</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">hospital1.report_invoice_template</field>
    <field name="report_file">hospital1.report_invoice_template</field>
    <field name="binding_model_id" ref="hospital1.model_hospital1_invoice"/>
    <field name="binding_type">report</field>
    </record>
</odoo>


